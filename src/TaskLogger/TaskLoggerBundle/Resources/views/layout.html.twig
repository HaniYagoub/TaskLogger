<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Task Logger{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/taskloggertasklogger/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            {#<link href="{{ asset('bundles/taskloggertasklogger/css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet" />#}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <header class="well">
                {% block header %}
                    <h1>Bienvenue sur TaskLogger!</h1>
                {% endblock %}
            </header>
            <div class="row">
                {% block content %}{% endblock %}
            </div>
            <hr />
            <footer>
                {% block footer %}
                    Â© TaskLogger 2014
                {% endblock %}
            </footer>
        </div>
        {% block javascripts %}
            <script src="{{ asset('bundles/taskloggertasklogger/js/jquery.min.js') }}"></script>
            <script src="{{ asset('bundles/taskloggertasklogger/js/jquery.loadTemplate.min.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script src="{{ asset('bundles/lexiktoporflop/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>